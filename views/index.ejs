<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Url_Shortner</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .table-fixed {
            width: 100%;
            max-width: 600px;
            /* Adjust the maximum width as needed */
        }

        .table-fixed thead th,
        .table-fixed tbody td {
            text-overflow: ellipsis;
            overflow: hidden;
            white-space: nowrap;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1 class="m-3">URL shortner</h1>
        <form action="/shorturls" method="POST" class="form d-inline-flex mb-3">
            <label for="fullurl" class="col-form-label">URL</label>
            <input type="url" name="fullurl" id="fullurl" class="form-control mx-2" required placeholder="Url" />
            <button type="submit" class="btn btn-success">shrink</button>
        </form>
        <div class="table-responsive">
            <table class="table table-hover table-striped table-bordered table-fixed">
                <thead>
                    <tr>
                        <th scope="col">Full_url</th>
                        <th scope="col">Short_url</th>
                        <th scope="col">Clicks</th>
                        <th scope="col">Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <% shorturls.forEach(url=> { %>
                        <tr>
                            <td><a href="<%=url.fullurl%>" target="_blank">
                                    <%=url.fullurl%>
                                </a></td>
                            <td><a href="<%=url.shorturl%>" target="_blank">
                                    <%=url.shorturl%>
                                </a></td>
                            <td>
                                <%= url.clicks%>
                            </td>
                            <td>
                                <form action="<%= url.id%>?_method=DELETE" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <%})%>
                </tbody>

            </table>
        </div>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>